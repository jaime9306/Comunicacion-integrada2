<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/background2">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.brisca.moviles.uva.brisca30.ReglasBrisca"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de Usuario:"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/Usuario" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntuación media:"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/Media"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historial de puntuaciones"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/Historial"/>



        <com.androidplot.xy.XYPlotZoomPan
            android:id="@+id/mySimpleXYPlot2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número de partidas jugadas:"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/NumeroPartidas"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultados de las partidas"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/Resultados"/>

        <com.androidplot.pie.PieChart
            android:id="@+id/PieChart2"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duración media(segundos):"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/DuracionMedia"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historial de la duración de las partidas"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/HistorialDuracion"/>

        <com.androidplot.xy.XYPlotZoomPan
            android:id="@+id/mySimpleXYPlot3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntos del equipo conseguidos"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/PorcentajePuntosEquipo"/>

        <com.androidplot.pie.PieChart
            android:id="@+id/PieChart3"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

    </LinearLayout>
</ScrollView>
