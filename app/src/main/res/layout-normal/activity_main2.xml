<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/background2">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context=".MainActivity"

        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            android:background="@drawable/titulo1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/boton1"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/buttonCrearPartida"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/redondo2"
            android:textStyle="bold"
            android:textSize="20sp"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/boton2"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/buttonUnirPartida"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/redondo2"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/boton3"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/buttonEstadisticas"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/redondo2"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/boton4"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/buttonInstrucciones"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/redondo2"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/boton5"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/buttonReglas"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/redondo2"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/boton6"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/buttonPreferencias"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/redondo2"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Introducir datos"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/buttonBD"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/redondo2"
            android:textStyle="bold"
            android:textSize="20sp"
            />




    </LinearLayout>
</ScrollView>