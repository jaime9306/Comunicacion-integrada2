<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/background2">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.brisca.moviles.uva.brisca30.ReglasBrisca"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombreUsuario"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/Usuario" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PuntuacionMedia"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/Media"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Puntuaciones"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/Historial"/>



        <com.androidplot.xy.XYPlotZoomPan
            android:id="@+id/mySimpleXYPlot2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PartidasJugadas"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/NumeroPartidas"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Resultados"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/Resultados"/>

        <com.androidplot.pie.PieChart
            android:id="@+id/PieChart2"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DuracionMedia"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/DuracionMedia"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Duraciones"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/HistorialDuracion"/>

        <com.androidplot.xy.XYPlotZoomPan
            android:id="@+id/mySimpleXYPlot3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PuntosEquipo"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/PorcentajePuntosEquipo"/>

        <com.androidplot.pie.PieChart
            android:id="@+id/PieChart3"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/DatosPrueba"
            android:background="@drawable/botonconectar"
            android:textStyle="bold"
            android:id="@+id/boton_datosPrueba"
            android:textSize="20sp"
            android:layout_margin="20sp"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/BorrarDatos"
            android:layout_margin="20sp"
            android:background="@drawable/botonconectar"
            android:textStyle="bold"
            android:id="@+id/boton_borrarDatos"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>
</ScrollView>
